<?php
// Coffee menu items
$menu = [
    "Espresso" => 2.50,
    "Cappuccino" => 3.50,
    "Latte" => 3.00,
    "Mocha" => 3.75
];

$total = 0;
$orderedItems = [];
$discountAmount = 0;

// Process form submission
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    foreach ($menu as $item => $price) {
        if (isset($_POST[$item]) && $_POST[$item] > 0) {
            $qty = (int)$_POST[$item];
            $orderedItems[$item] = $qty;
            $total += $price * $qty;
        }
    }
    
    // Apply discount if total >= $15
    if ($total >= 15) {
        $discount = 0.10; // 10% discount
        $discountAmount = $total * $discount;
        $total -= $discountAmount;
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Cozy Café Billing</title>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<style>
body {
    font-family: 'Roboto', sans-serif;
    background:#f4ece2;
    color:#3e2c23;
    padding:20px;
}
h1 {
    color:#6f4e37;
    text-align:center;
}
form {
    max-width:600px;
    margin:auto;
    background:#fff5e6;
    padding:25px;
    border-radius:15px;
    box-shadow:0 5px 15px rgba(0,0,0,0.1);
}
label {
    display:block;
    margin:10px 0 5px;
    font-weight:500;
}
input[type="number"] {
    width:60px;
    padding:7px;
    border-radius:7px;
    border:1px solid #d2b48c;
    text-align:center;
}
button {
    margin-top:20px;
    padding:12px 25px;
    background:#6f4e37;
    color:white;
    border:none;
    border-radius:50px;
    cursor:pointer;
    font-size:1rem;
    transition: background 0.3s, transform 0.2s;
}
button:hover {
    background:#8b5e3c;
    transform: translateY(-2px);
}
.total {
    max-width:600px;
    margin:30px auto;
    background:#fff5e6;
    padding:20px;
    border-radius:15px;
    box-shadow:0 5px 15px rgba(0,0,0,0.1);
}
ul {
    list-style-type:none;
    padding-left:0;
}
ul li {
    padding:5px 0;
}
</style>
</head>
<body>

<h1>☕ Cozy Café Billing</h1>

<form method="POST">
    <?php foreach($menu as $item => $price): ?>
        <label><?= $item ?> ($<?= number_format($price,2) ?>):</label>
        <input type="number" name="<?= $item ?>" value="<?= $_POST[$item] ?? 0 ?>" min="0">
    <?php endforeach; ?>
    <button type="submit">Calculate Total</button>
</form>

<?php if ($_SERVER['REQUEST_METHOD'] === 'POST'): ?>
<div class="total">
    <h2>Bill Summary:</h2>
    <?php if(!empty($orderedItems)): ?>
        <ul>
            <?php foreach($orderedItems as $item => $qty): ?>
                <li><?= $qty ?> x <?= $item ?> = $<?= number_format($menu[$item]*$qty,2) ?></li>
            <?php endforeach; ?>
        </ul>
        <?php if($discountAmount > 0): ?>
            <p>Discount Applied: $<?= number_format($discountAmount,2) ?></p>
        <?php endif; ?>
        <p><strong>Total Amount: $<?= number_format($total,2) ?></strong></p>
    <?php else: ?>
        <p>No items selected.</p>
    <?php endif; ?>
</div>
<?php endif; ?>

</body>
</html>
